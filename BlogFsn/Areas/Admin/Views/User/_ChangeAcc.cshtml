
@model Fsn.Application.Contracts.User.UserAccessLevel

@{
    Layout = null;

}


<div class="modal fade bd-example-modal-lg" id="ChangeAcc" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="FrmChangeAcc" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تخصیص سطح دسترسی به کاربر (@Model.FullName)</h5>
                    <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group text-right">
                                <label class="control-label ">سطح دسترسی*</label>
                                <select type="text" asp-for="AccessLevelId" asp-items="@ViewBag.AccessLevels" class="form-control">
                                    <option value="0">انتخاب کنید</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="SendForm('/Admin/User/ChangeAccessLevel','FrmChangeAcc')" class="btn btn-primary">ثبت</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function Close() {
        $(document).ready(function () {
            $('#ChangeAcc').remove();
            $('.modal-backdrop').remove();
        });
    }

</script>